<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class=" btn btn-success ml-auto ">Add Products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <h1>Product List</h1>
                <tr>
                    <th scope="col">no</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">price</th>
                    <th scope="col">Description</th>
                    <th scope="col">images</th>
                    <th scope="col">edit</th>
                    <th scope="col">delete</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Productname}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px;height:50px" src="/images/{{this.image}}" alt=""></td>
                    <td><a href="/admin/edit/{{this._id}}" class="btn btn-primary"> edit </a> </td>
                    <td><a href="/admin/delete/{{this._id}}?_method=DELETE" class="btn btn-danger"> delete </a> </td>
                </tr>

                {{/each}}
            </tbody>
        </table>
    </div>



</section>